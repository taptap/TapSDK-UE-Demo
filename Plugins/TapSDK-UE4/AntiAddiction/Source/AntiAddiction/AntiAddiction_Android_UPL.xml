<?xml version="1.0" encoding="utf-8"?>
<root xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- init section is always evaluated once per architecture -->
    <init>
        <log text="AntiAddiction Android Build init"/>
    </init>

    <!-- optional additions to proguard -->
    <proguardAdditions>
        <insert>
        </insert>
    </proguardAdditions>

    <!-- optional files or directories to copy to Intermediate/Android/APK -->
    <resourceCopies>
        <copyDir src="$S(PluginDir)/../ThirdParty/Android/libs/" dst="$S(BuildDir)/libs/" />
        <copyDir src="$S(PluginDir)/Private/Server/China/Android/Java/" dst="$S(BuildDir)/src/com/tds/"/>
    </resourceCopies>

    <buildGradleAdditions>
        <insert>
            dependencies.implementation(name: 'AntiAddiction_3.18.4',ext:'aar')
            dependencies.implementation(name: 'AntiAddictionUI_3.18.4',ext:'aar')
        </insert>
    </buildGradleAdditions>
</root>
